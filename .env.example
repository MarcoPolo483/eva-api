# EVA API Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ============================================================================
# CORS Settings
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8081

# ============================================================================
# Azure AD B2C (Citizen Authentication)
# ============================================================================
AZURE_AD_B2C_TENANT_ID=your-b2c-tenant-id
AZURE_AD_B2C_CLIENT_ID=your-b2c-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-b2c-client-secret
AZURE_AD_B2C_AUTHORITY=https://your-tenant.b2clogin.com/your-tenant/B2C_1_signin
AZURE_AD_B2C_SCOPE=openid profile email

# ============================================================================
# Azure Entra ID (Employee Authentication)
# ============================================================================
AZURE_ENTRA_TENANT_ID=your-entra-tenant-id
AZURE_ENTRA_CLIENT_ID=your-entra-client-id
AZURE_ENTRA_CLIENT_SECRET=your-entra-client-secret

# ============================================================================
# JWT Configuration
# ============================================================================
JWT_ALGORITHM=RS256
JWT_AUDIENCE=your-audience
JWT_ISSUER=your-issuer

# ============================================================================
# Azure Cosmos DB
# ============================================================================
COSMOS_DB_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-key
COSMOS_DB_DATABASE=eva_api
COSMOS_DB_CONTAINER_API_KEYS=api_keys
COSMOS_DB_CONTAINER_AUDIT_LOGS=audit_logs

# ============================================================================
# Azure Blob Storage
# ============================================================================
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_DOCUMENTS=documents

# ============================================================================
# Azure OpenAI (Query Processing)
# ============================================================================
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# ============================================================================
# Redis (Rate Limiting & Cache)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_SSL=false

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60

# ============================================================================
# Security
# ============================================================================
API_KEY_PREFIX=sk_
API_KEY_LENGTH=32
REQUIRE_HTTPS=false

# ============================================================================
# Observability
# ============================================================================
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4318
AZURE_MONITOR_CONNECTION_STRING=your-connection-string
